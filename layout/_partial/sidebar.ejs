<header id="header" class="site-header">
	<div class="site-branding">
		<span class="site-title">
			<% if(theme.site_avatar) { %>
				<a href="<%- url_for(theme.site_avatar) %>" class="avatar-circle"><img src="<%- url_for(theme.site_avatar) %>" /></a>
			<% }%>
			<a href="<%- url_for(config.root) %>" rel="home"><%= theme.site_title %></a></span>
		<button class="secondary-toggle font-asesome-icon">Menu and widgets</button>
	</div>
</header>
<div id="secondary" class="secondary">
	<nav class="main-navigation">
                         <ul id="menu-demo-menu" class="nav-menu">
						 <% for (var i in theme.menu){ %>
							<li class="menu-item"><a href="<%- url_for(theme.menu[i]) %>"><%= __(i) %></a></li>
						<% } %>
                         </ul>
    </nav>
	<!-- 补充 -->
	<aside class="widget">
		<h3 class="widget-title">愿景</h3>		
		<p class="site-description"><%= theme.site_description %></p>
	</aside>

	<% theme.widgets.forEach(function(widget){ %>
		<%- partial('../_widget/' + widget) %>
	<% }); %>
</div>
